<div class="container">
	<h3>Account details</h3><hr>
	<div class="active-posts">
		<h4>Your active posts:</h4>
		<ul class="list-inline">
			<% @user.listings.each do |listing| %>
				<li>
					<h4><%= link_to listing.name, listing_path(listing), :class => "listing-index-name" %></h4>
				</li>
				<li>
					<%= button_to "Edit", edit_user_listing_path(@user.id, listing.id), :method => :get, :class => "listing-edit-link btn btn-warning btn-sm" %>
				</li>
				<li>
					<%= button_to "Delete", user_listing_path(@user.id, listing.id), method: :delete, :class => "listing-edit-link btn btn-danger btn-sm", data: { confirm: 'Are you sure you want to delete this listing?' } %>
				</li>
			<% end %>
		</ul>
	</div>

	<%= button_to 'Delete account', user_registration_path, data: { confirm: 'Are you sure you want to delete your account?' }, :method => :delete, :class => "btn btn-danger btn-sm" %>
</div>
