<div class="listing-form"
  <%= form_for @listing, :html => { :multipart => true } do |f| %>
    <% if @listing.errors.any? %>
      <h3>Error's present:</h3>
      <ul>
        <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="form-group">
      <%= f.label 'Title' %><br>
      <%= f.text_field :name %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Description' %><br>
      <%= f.text_area :description, :class => "listing-text-area" %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Price' %><br>
      <%= f.number_field :price %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Bundle Type' %><br>
      <%= f.select(:bundle_type, options_for_select(['each','per lb','all']), ) %><br> 
    </div>
    <div class="form-group">
      <%= f.label 'Location' %><br>
      <%= f.select(:city, options_for_select(['Portland','Seattle'])) %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Category' %><br>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %><br> 
    </div>
    <div class="form-group">
      <%= f.label 'For Sale' %>
      <%= f.check_box :for_sale %><br>  
      <%= f.label 'For Trade' %>
      <%= f.check_box :for_trade %><br>
      <%= f.label 'For Free' %>
      <%= f.check_box :for_donation %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Photo 1' %><br>
      <%= f.file_field :photo1 %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Photo 2' %><br>
      <%= f.file_field :photo2 %><br>
    </div>
    <div class="form-actions">
      <%= f.submit 'Submit', :class => "btn" %>
  <% end %>
</div>