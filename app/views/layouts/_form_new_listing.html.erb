<div class="listing-form">
  <%= form_for @listing, :html => { :multipart => true } do |f| %>
    <% if @listing.errors.any? %>
      <h3>Error's present:</h3>
      <ul>
        <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <br>
    <div class="form-group">
      <%= f.text_field :name, :placeholder => " Title" %><br>
    </div>
    <div class="form-group">
      <%= f.text_area :description, :class => "listing-text-area", :placeholder => " Enter your description" %><br>
    </div>
    <div class="form-group">
      <%= f.text_field :price, :placeholder => " Price" %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Bundle Type' %>
      <%= f.select(:bundle_type, options_for_select(['each','per lb','all']), ) %><br> 
    </div>
    <div class="form-group">
      <%= f.label 'Location' %>
      <%= f.select(:city, options_for_select(['Portland','Seattle'])) %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Category' %>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %><br> 
    </div>
    <div class="form-group">
      <%= f.label 'For Sale' %>
      <%= f.check_box :for_sale %><br>  
      <%= f.label 'For Trade' %>
      <%= f.check_box :for_trade %><br>
      <%= f.label 'For Free' %>
      <%= f.check_box :for_donation %><br>
    </div>
    <div class="form-group">
      <%= f.label 'Photo 1' %><br>
      <%= f.file_field :photo1 %>
    </div>
    <div class="form-group">
      <%= f.label 'Photo 2' %><br>
      <%= f.file_field :photo2 %>
    </div>
    <div class="form-actions">
      <%= f.submit 'Submit', :class => "btn", :id => "listing-form-button" %>
  <% end %>
</div>